extends layout
block content
  .post-header
    h4= title
    div.details #{author}, #{moment(publishDate).format("Do MMM YYYY")}
      if modifyDate && moment(publishDate).isBefore(modifyDate)
        span  - updated #{moment(modifyDate).format("Do MMM YYYY")}
  .post-content      
    div!= contents

  link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.8.0/styles/monokai_sublime.min.css")
  script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.8.0/highlight.min.js")
  script hljs.initHighlightingOnLoad();
