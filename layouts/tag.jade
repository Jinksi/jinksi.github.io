extends layout
block content
  //- if collections.posts && collections.posts.length > 0
  //- console.log(pagination.files[0])
  h4 Posts about 
    a(href="/blog/#{tag}").tag #{tag}
  ul.post-list
    each post in pagination.files
      li.post-item
        h5.title
          a(href="/#{post.path}")
           =post.title
        div.details #{moment(post.publishDate).format("Do MMM YYYY")}
        div !{post.excerpt} 
          a(href="/#{post.path}" class="readmore").u-pull-right read more
          .clear
      hr
